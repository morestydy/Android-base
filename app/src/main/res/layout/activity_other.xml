<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_lifecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LifeCycle"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_btnJump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jump"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="事件处理机制"/>
    <Button
        android:id="@+id/btn_handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler消息处理"/>
    <Button
        android:id="@+id/btn_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据存储"/>
    <Button
        android:id="@+id/btn_brocast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广播"/>
    <Button
        android:id="@+id/btn_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="属性动画"/>
    <Button
        android:id="@+id/btn_sqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SQlite"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_litepal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LitePal"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"/>
    <Button
        android:id="@+id/btn_webapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="webAPI请求"/>
    <Button
        android:id="@+id/btn_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="service"/>
</LinearLayout>
</ScrollView>