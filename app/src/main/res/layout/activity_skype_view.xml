<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00aff0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_weight="1">
        <Button
            android:text="MS账号"
            android:id="@+id/btn_ms"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_blue"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_skype"
            android:textColor="@color/colorWhite"
            android:text="skype用户"
            android:layout_above="@+id/btn_ms"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_login"
            android:text="登录"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_skype"/>
        <ImageView
            android:src="@drawable/icon"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_above="@id/tv_login"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">
            <ImageView
                android:src="@drawable/icon_windows"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"/>
            <ImageView
                android:src="@drawable/icon_outlook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:src="@drawable/icon_skype"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"/>
            <ImageView
                android:src="@drawable/icon_xbox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"/>
            <ImageView
                android:src="@drawable/icon_cloud"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
            android:padding="15dp"
            android:text="创建账号"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0096e2"/>
    </RelativeLayout>


</LinearLayout>